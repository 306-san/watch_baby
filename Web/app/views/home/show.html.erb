<div class="row">
  <div class="col-lg-4">
    <div class="bs-component">
<div class="panel panel-default">
  <div class="panel-heading">保護者の名前</div>
  <div class="panel-body">
    <%= current_user.username %>
  </div>
</div>
      <div class="panel panel-default">
        <div class="panel-heading">あかちゃんの名前</div>
        <div class="panel-body">
          <%= current_user.babyname %>
        </div>
  </div>
      </div>
    </div>
  <% unless @user.status.empty? %>
    <div class="col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">お部屋の温度</div>
        <div class="panel-body"><div  class="h1"><%= @user.status.last.temp %>&#08451;</div></div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">お部屋の湿度</div>
        <div class="panel-body"><div  class="h1" ><%= @user.status.last.humidity %>%</div></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="tables">温度変化</h1>
      </div>
      <table class="table  table-hover table-responsive">
        <thead>
        <tr>
          <th>No</th>
          <th>温度</th>
          <th>湿度</th>
          <th>時刻</th>
        </tr>
        </thead>
        <tbody>
          <% @user.status.each do |status| %>
            <tr>
              <td><%= status.id %></td>
              <td><%= status.temp %></td>
              <td><%= status.humidity %></td>
              <td><%= status.created_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>